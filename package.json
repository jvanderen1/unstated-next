{
  "name": "@jvanderen1/unstated-next",
  "version": "1.0.0",
  "description": "200 bytes to never think about React state management libraries ever again",
  "sideEffects": false,
  "scripts": {
    "build": "npm run build:prod",
    "build:dev": "webpack --config webpack/webpack.dev.build.ts",
    "build:prod": "webpack --config webpack/webpack.prod.build.ts",
    "clean": "npm run clean:dist && npm run clean:types && npm run clean:node-modules",
    "clean:dist": "rm -rf dist/",
    "clean:node-modules": "rm -rf node_modules/",
    "clean:types": "tsc --build --clean",
    "clean-install": "npm run clean && npm install",
    "lint": "eslint './'",
    "lint:fix": "npm run lint -- --fix",
    "prepare": "husky install",
    "pretty": "prettier --check './'",
    "pretty:fix": "prettier --write './'",
    "test": "ava",
    "types-check": "tsc --skipLibCheck --noEmit",
    "serve": "webpack serve --config webpack/webpack.dev.serve.ts --open"
  },
  "author": "<livetoscout@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@swc/cli": "^0.1.49",
    "@swc/core": "^1.2.80",
    "@types/html-webpack-plugin": "^3.2.6",
    "@types/node": "^16.7.1",
    "@types/react": "latest",
    "@types/react-dom": "latest",
    "@types/webpack": "^5.28.0",
    "@types/webpack-dev-server": "^3.11.1",
    "@typescript-eslint/eslint-plugin": "^4.29.2",
    "@typescript-eslint/parser": "^4.29.2",
    "clean-webpack-plugin": "^4.0.0-alpha.0",
    "eslint": "^7.32.0",
    "eslint-plugin-react": "^7.24.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "html-webpack-plugin": "^5.3.2",
    "husky": "^7.0.1",
    "jest": "^27.0.6",
    "lint-staged": "^11.1.2",
    "prettier": "^2.3.2",
    "prop-types": "latest",
    "react-dom": "latest",
    "swc-loader": "^0.1.14",
    "ts-node": "^10.2.1",
    "typescript": "^4.3.5",
    "webpack-cli": "^4.8.0",
    "webpack-dev-server": "^4.0.0",
    "webpack-merge": "^5.8.0"
  },
  "peerDependencies": {
    "react": ">= 16.8"
  }
}
